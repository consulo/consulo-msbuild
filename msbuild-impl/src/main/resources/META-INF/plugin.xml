<consulo-plugin url="https://github.com/consulo/consulo-msbuild">
	<id>consulo.msbuild</id>
	<name>MSBuild</name>
	<version>SNAPSHOT</version>
	<vendor>consulo.io</vendor>
	<category>Build Framework</category>
	<depends>com.intellij.xml</depends>

	<tags>
		<tag>build.framework</tag>
		<tag>import</tag>
	</tags>

	<permissions>
		<permission type="SOCKET_BIND"/>
		<permission type="SOCKET_CONNECT"/>
		<permission type="PROCESS_CREATE"/>
		<permission type="PROCESS_MANAGE"/>
	</permissions>

	<!--.NET Support-->
	<depends optional="true">consulo.dotnet</depends>
	<depends optional="true">consulo.dotnet.mono</depends>
	<depends optional="true">consulo.dotnet.microsoft</depends>

	<depends optional="true">consulo.csharp</depends>



	<extensions defaultExtensionNs="com.intellij.xml">
		<standardResource url="http://schemas.microsoft.com/developer/msbuild/2003" path="/standardSchemes/Microsoft.Build.xsd"/>


	</extensions>
</consulo-plugin>